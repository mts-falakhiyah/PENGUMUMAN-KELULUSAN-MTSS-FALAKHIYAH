        function checkGraduation() {
            const input = document.getElementById('searchInput').value.trim();
            const resultDiv = document.getElementById('result');
            const resultContent = document.getElementById('resultContent');
            
            if (!input) {
                alert("Silakan masukkan NIS atau Nama terlebih dahulu!");
                return;
            }
            
            // Cari siswa
            const student = graduates.find(s => 
                s.nis === input || s.name.toLowerCase().includes(input.toLowerCase())
            );
            
            if (student) {
                resultContent.innerHTML = `
                    <div class="graduate">السَّلاَمُ عَلَيْكُمْ وَرَحْمَةُ اللهِ وَبَرَكَاتُهُ</div>
                    <div class="graduate">SELAMAT! ANDA LULUS</div>
                    <p><strong>Nama Lengkap:</strong> ${student.name}</p>
                    <p><strong>Nomor Induk Siswa (NIS):</strong> ${student.nis}</p>
                    <p><strong>Nama Wali:</strong> ${student.wali}</p>
                    <p><strong>Nilai Akhir:</strong> ${student.nilai}</p>
                    <p style="text-align: center; font-style: italic; margin-top: 20px;">
                        "Atas kelulusan ini, kami ucapkan Alhamdulillah. Semoga menjadi generasi yang sholeh/sholehah dan bermanfaat bagi umat."
                    </p>
                `;
            } else {
                resultContent.innerHTML = `
                    <div class="graduate not-pass">DATA TIDAK DITEMUKAN</div>
                    <p style="text-align: center;">NIS/Nama yang Anda masukkan tidak terdaftar sebagai siswa kelas IX MTs Falakhiyah Tahun Pelajaran 2023/2024.</p>
                    <p style="text-align: center;">Silakan periksa kembali atau hubungi panitia kelulusan.</p>
                `;
            }
            
            resultDiv.style.display = 'block';
        }
    </script>
